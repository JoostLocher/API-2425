{% layout "server/layouts/base.liquid" %}

{% block content %}
<section class="pokemon-detail">
  <div class="pokemon-header">
    <h2>{{ pokemon.name | capitalize }}</h2>
    <p>Pok√©dex #{{ pokemon.id }}</p>
  </div>
  
  <div class="pokemon-info">
    <div class="pokemon-image">
      <img src="{{ pokemon.sprites.front_default }}" alt="{{ pokemon.name }}">
    </div>
    
    <div class="pokemon-data">
      <div class="data-section">
        <h3>Types</h3>
        <ul class="type-list">
          {% for type in types %}
            <li class="type {{ type }}">{{ type }}</li>
          {% endfor %}
        </ul>
      </div>
      
      <div class="data-section">
        <h3>Base Stats</h3>
        <ul class="stats-list">
          {% for stat in stats %}
            <li>
              <span class="stat-name">{{ stat.name | capitalize }}</span>
              <span class="stat-value">{{ stat.value }}</span>
              <div class="stat-bar">
                <div class="stat-fill" style="width: {{ stat.value | divided_by: 2 }}%"></div>
              </div>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
  
  <div class="pokemon-actions">
    <a href="/pokemon/{{ pokemon.name }}/memory-game" class="memory-game-button">
      Play Memory Game with {{ pokemon.name | capitalize }}
    </a>
  </div>
</section>
{% endblock %}